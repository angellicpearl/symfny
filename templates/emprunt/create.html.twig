{# templates/emprunt/create.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Emprunter le livre : {{ livre.titre }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Emprunter le livre : {{ livre.titre }}</h1>

        {# Affichage des messages flash #}
        {% if app.flashes('success') %}
            <div class="alert alert-success">
                {% for message in app.flashes('success') %}
                    <p>{{ message }}</p>
                {% endfor %}
            </div>
        {% endif %}

        <div class="card">
            <div class="card-body">
                {{ form_start(form) }}
                    <div class="mb-3">
                        {{ form_row(form.dateEmprunt) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.dateRetour) }}
                    </div>
                    <button type="submit" class="btn btn-primary">Emprunter</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
