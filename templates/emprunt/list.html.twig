{% extends 'base.html.twig' %}

{% block title %}Liste des emprunts{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Liste des emprunts</h1>

        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Livre</th>
                    <th scope="col">Utilisateur</th>
                    <th scope="col">Date d'emprunt</th>
                    <th scope="col">Date de retour</th>
                </tr>
            </thead>
            <tbody>
                {% for emprunt in pagination %}
                    <tr>
                        <td>{{ emprunt.livre.titre }}</td>
                        <td>{{ emprunt.utilisateur.nom }}</td>
                        <td>{{ emprunt.dateEmprunt|date('d/m/Y') }}</td>
                        <td>{{ emprunt.dateRetour|date('d/m/Y') }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="text-center">Aucun emprunt trouvé.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        {# Pagination controls #}
        <div class="navigation">
            {{ knp_pagination_render(pagination) }}
        </div>
         <div class="mt-4">
            <a href="{{ path('app_livre_index') }}" class="btn btn-primary">Retour à la liste des livres</a>
        </div>

{% endblock %}
